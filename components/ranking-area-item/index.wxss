/* components/ranking-area-item/index.wxss */
.item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
  width: 100%;
  border-radius: 12rpx;
  background-color: #eee;
  overflow: hidden;
}

.content {
  flex: 1;
  overflow: hidden;
  padding: 24rpx;
}
.content-title {
  font-size: 34rpx;
}
.content-list {
  margin-top: 6rpx;
  width: 100%;
  font-size: 24rpx;
}
.content-list-item {
  display: inline-block;
  margin-top: 6rpx;
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  text-emphasis: none;
  color: #333;
}
.content-list-item .singer {
  color: #999;
}

.album {
  position: relative;
  display: flex;
  width: 220rpx;
}
.album .image {
  display: block;
  width: 100%;
  height: 100%;
}
.album .play-counter {
  position: absolute;
  right: 0;
  bottom: 0;
  border-radius: 12rpx;
  background-color: rgba(0, 0, 0, 0.5);
  padding: 6rpx 10rpx;
  font-size: 22rpx;
  color: #fff;
}
