/* components/song-menu-item-v2/index.wxss */
.item {
  display: flex;
  align-items: center;
  margin: 36rpx 0 10rpx;
}

.index {
  padding: 12rpx;
  font-size: 30rpx;
}

.info {
  margin-left: 16rpx;
  flex: 1;
}
.info .name {
  font-size: 30rpx;
}
.info .source {
  margin-top: 10rpx;
  color: #666;
  line-height: 24rpx;
}
.source .icon {
  display: inline-block;
  margin-right: 10rpx;
  vertical-align: middle;
  width: 38rpx;
  height: 24rpx;
}
.source text {
  font-size: 24rpx;
}
.source .dot {
  margin: 0 6rpx;
}
