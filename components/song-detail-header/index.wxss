/* components/song-detail-header/index.wxss */
.header {
  position: relative;
  left: -20rpx;
  display: flex;
  flex-direction: column;
  width: 100vw;
  height: 450rpx;
  color: #fff;
}
.header .bg-image,
.header .bg-cover {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}
.header .bg-cover {
  background-color: rgba(0, 0, 0, 0.5);
  backdrop-filter: blur(5px);
}

.content {
  display: flex;
  margin-top: 60rpx;
  padding: 0 50rpx;
}
.content .image {
  width: 220rpx;
  height: 220rpx;
  border-radius: 16rpx;
}
.content .info {
  position: relative;
  margin-left: 50rpx;
  height: 220rpx;
  flex: 1;
}
.content .author {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
}
.content .author .avatar {
  width: 50rpx;
  height: 50rpx;
  border-radius: 25rpx;
}
.content .author .nickname {
  margin-left: 18rpx;
  font-size: 24rpx;
}
.content .info .desc {
  position: absolute;
  left: 0;
  bottom: 0;
  display: inline-block;
  margin-top: 30rpx;
  width: 100%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 24rpx;
}

.operation {
  margin-top: 30rpx;
  display: flex;
  justify-content: space-around;
  padding: 30rpx;
}
.operation .item {
  display: flex;
  align-items: center;
}
.operation .item .icon {
  width: 48rpx;
  margin-right: 10rpx;
}
.operation .item .text {
  font-size: 28rpx;
}
